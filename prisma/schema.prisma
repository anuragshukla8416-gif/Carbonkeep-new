// Prisma Schema for SCOPE by CarbonKeep

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  HOTEL_OWNER
  VENDOR
  ADMIN
}

enum AuditStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum BadgeLevel {
  NONE
  BRONZE
  SILVER
  GOLD
  SCOPE_VERIFIED
}

model User {
  id              String   @id @default(uuid())
  email           String   @unique
  passwordHash    String
  role            Role     @default(HOTEL_OWNER)
  fullName        String?
  avatarUrl       String?
  subscriptionTier String  @default("FREE")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  hotels          Hotel[]
  vendorProfile   Vendor?
  notifications   Notification[]
}

model Hotel {
  id                String   @id @default(uuid())
  ownerId           String
  owner             User     @relation(fields: [ownerId], references: [id])
  name              String
  address           String
  city              String
  country           String
  roomCount         Int
  sustainabilityScore Int    @default(0)
  badgeLevel        BadgeLevel @default(NONE)
  
  audits            Audit[]
  utilityBills      UtilityBill[]
  carbonMetrics     CarbonMetric[]
  bookings          Booking[]
  quotes            Quote[]
  createdAt         DateTime @default(now())
}

model Audit {
  id            String      @id @default(uuid())
  hotelId       String
  hotel         Hotel       @relation(fields: [hotelId], references: [id])
  status        AuditStatus @default(PENDING)
  mediaUrls     String[]    // S3 links to videos/images/audio
  results       Json?       // AI detected inefficiencies, savings, actions
  createdAt     DateTime    @default(now())
  completedAt   DateTime?
  
  carbonMetric  CarbonMetric?
}

model CarbonMetric {
  id            String   @id @default(uuid())
  hotelId       String
  hotel         Hotel    @relation(fields: [hotelId], references: [id])
  auditId       String   @unique
  audit         Audit    @relation(fields: [auditId], references: [id])
  totalCarbonSaved Float
  energySaved      Float
  waterSaved       Float
  efficiencyPerRoom Float
  timestamp     DateTime @default(now())
}

model Vendor {
  id            String   @id @default(uuid())
  userId        String   @unique
  user          User     @relation(fields: [userId], references: [id])
  businessName  String
  services      String[]
  rating        Float    @default(0.0)
  isVerified    Boolean  @default(false)
  
  quotes        Quote[]
  reviews       Review[]
}

model Quote {
  id          String   @id @default(uuid())
  vendorId    String
  vendor      Vendor   @relation(fields: [vendorId], references: [id])
  hotelId     String
  hotel       Hotel    @relation(fields: [hotelId], references: [id])
  amount      Float
  description String
  status      String   @default("PENDING") // PENDING, ACCEPTED, REJECTED
  createdAt   DateTime @default(now())
}

model UtilityBill {
  id          String   @id @default(uuid())
  hotelId     String
  hotel       Hotel    @relation(fields: [hotelId], references: [id])
  type        String   // ENERGY, WATER, GAS
  usageAmount Float
  cost        Float
  billDate    DateTime
  billImageUrl String?
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  title     String
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Booking {
  id        String   @id @default(uuid())
  hotelId   String
  hotel     Hotel    @relation(fields: [hotelId], references: [id])
  service   String
  status    String   @default("SCHEDULED")
  date      DateTime
}

model Review {
  id        String   @id @default(uuid())
  vendorId  String
  vendor    Vendor   @relation(fields: [vendorId], references: [id])
  rating    Int
  comment   String
  createdAt DateTime @default(now())
}
